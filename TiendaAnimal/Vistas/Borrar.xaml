<Window x:Class="AdminAlmacen.Vistas.Borrar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminAlmacen.Vistas"
        mc:Ignorable="d"
        Title="Borrar" Height="200" Width="600">
    <Grid>
        <Grid >
            <TextBlock Name="txtEliminar" Text="¿Seguro desea eliminar este registro?" Foreground="DimGray" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="37" Margin="130,29,86,0"/>
            <Label Content="Usuario" HorizontalContentAlignment="Center"  HorizontalAlignment="Left" Width="363" Margin="130,62,0,68" FontSize="24"/>
        </Grid>
        <Button Click="btn_borrar" Content="Eliminar"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"   Background="#FF698EF1" BorderBrush="{x:Null}"  Foreground="White" Height="37" Margin="150,129,0,0"/>
        <Button Click="btn_cerrar" Content="Cancelar" Height="37"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="118"   Background="#FFE60000" BorderBrush="{x:Null}"  Foreground="White" Margin="321,127,0,0"/>

    </Grid>
</Window>
